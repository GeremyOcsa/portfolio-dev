---
import "../styles/global.css";
import "@fontsource-variable/caveat";
import "@fontsource-variable/karla";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio - Geremy Ocsa</title>
  </head>
  <body class="px-2 lg:px-0">
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  h1,
  h2,
  h5 {
    color: #330800;
    font-family: "Caveat Variable", sans-serif;
  }
  h3,
  h5 {
    color: #330800;
    font-family: "Karla Variable", sans-serif;
  }
  p {
    color: #0f0f0f;
    font-family: "Karla Variable", sans-serif;
    line-height: 1.4;
    font-weight: 400;
    font-size: 1.2rem;
    letter-spacing: 0.5px;
  }

  p strong {
    color: #ff9580;
    font-weight: 700;
  }

  nav {
    color: #330800;
    font-family: "Karla Variable", sans-serif;
  }
</style>
